# Application
APP_NAME="Smart Lodge Budget"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (Supabase)
DATABASE_URL=postgresql+asyncpg://postgres:password@db.xxxxxx.supabase.co:5432/postgres
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (Upstash)
REDIS_URL=redis://:password@apn1-xxxxx.upstash.io:6379
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Gemini AI (FREE: 60 requests/min)
GEMINI_API_KEY=your-gemini-api-key-get-from-ai.google.dev
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=8192

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=.pdf
UPLOAD_DIR=/tmp/uploads

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600  # 1 hour in seconds

# Email (Optional - for v2)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
